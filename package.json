{
  "name": "@bluelovers/dts-bundle-generator",
  "version": "6.12.3",
  "private": false,
  "description": "DTS Bundle Generator",
  "homepage": "https://github.com/bluelovers/dts-bundle-generator#readme",
  "bugs": {
    "url": "https://github.com/bluelovers/dts-bundle-generator/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluelovers/dts-bundle-generator.git"
  },
  "license": "MIT",
  "author": "Evgeniy Timokhov",
  "main": "dist/bundle-generator.js",
  "typings": "dist/bundle-generator.d.ts",
  "bin": "dist/bin/dts-bundle-generator.js",
  "files": [
    "config-schema.d.ts",
    "dist/**/*.d.ts",
    "dist/**/*.js"
  ],
  "scripts": {
    "lint": "eslint --format=unix --ext .ts ./",
    "test": "mocha tests/unittests/**/*.spec.ts tests/e2e/all-test-cases.ts",
    "test:jest": "jest --passWithNoTests",
    "test:jest:snapshot": "yarn run test:jest -- -u",
    "test:snapshot": "yarn run test -- -u",
    "test:tsd": "ynpx tsd",
    "npm:publish": "npm publish",
    "npm:publish:bump": "yarn run version:bump && npm publish",
    "version:bump": "yarn-tool version",
    "prepare-release": "npm-run-all clean tsc bundle-dts",
    "postpublish": "yarn run postpublish:changelog && yarn run postpublish:git:commit && yarn run postpublish:git:tag && yarn run postpublish:git:push",
    "postpublish:changelog": "ynpx --quiet @yarn-tool/changelog && git add ./CHANGELOG.md",
    "postpublish:git:commit": "git commit -m \"chore(release): publish\" . & echo postpublish:git:commit",
    "postpublish:git:push": "git push --follow-tags",
    "postpublish:git:tag": "ynpx --quiet @yarn-tool/tag",
    "bundle-dts": "npm run check-dts-config && node ./dist/bin/dts-bundle-generator.js --config dts-config.js --silent",
    "check-dts-config": "node ./node_modules/ts-compiler/bin/tsc --lib es2015 --allowJs --noEmit ./dts-config.js",
    "clean": "rimraf dist/ dts-out/",
    "tsc": "node ./node_modules/ts-compiler/bin/tsc --version && node ./node_modules/ts-compiler/bin/tsc -b ./tsconfig.json",
    "verify": "npm-run-all clean tsc -p bundle-dts lint -s test"
  },
  "dependencies": {
    "tslib": "^2",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@bluelovers/tsconfig": "^1.0.31",
    "@ts-type/package-dts": "^2.0.8",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.4",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-unicorn": "^44.0.2",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-compiler": "npm:typescript@next",
    "ts-node": "^10.9.1"
  },
  "peerDependencies": {
    "typescript": ">=3.0.1"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "readme": "README.md"
}
